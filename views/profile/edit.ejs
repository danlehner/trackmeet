<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', { title: 'Edit Profile'}) %>
<body>

  <%- include('../partials/nav') %>

  <div class="jumbotron profile-jumbotron">
    <div class="container">
      <h1 class="display-1 text-white">Edit Profile</h1>
    </div>
  </div>
  
 <form id="edit-form" action="/profile/edit?_method=PUT" method="POST">
   <div class="container w-75 show-container mt-5 mb-5">
      <div class="row h-100">
        <div class="col pb-5" style="background-color: #579789;">
          <div class="form-group">
            <h2 class="text-white mt-3 align-self-center display-5">
              <label for="email">Edit Username</label>
            </h2>
            <input type="text" class="form-control" name="username" value="<%= user.username %>">
          </div>
          <img class="rounded-circle mt-3" src="<%= user.profilePic %>" width="100" />
          <div class="form-group">
            <h2 class="text-white mt-3 align-self-center display-5">
              <label for="email">Edit Profile Pic</label>
            </h2>
            <input type="text" class="form-control" name="profilePic" value="<%= user.profilePic %>">
          </div>
        </div>
        <div class="col pl-4 border border-dark">
          <div class="form-group">
            <h2 class="mt-3 align-self-center display-5" style="color: #579789;">
              <label for="email">Edit City</label>
            </h2>
            <input type="text" class="form-control" name="city" value="<%= user.city %>">
          </div>
          <div class="form-group">
            <h2 class="mt-3 align-self-center display-5" style="color: #579789;">
              <label for="email">Edit Bio</label>
            </h2>
            <input type="text" class="form-control" name="bio" value="<%= user.bio %>">
          </div>
          <div class="d-flex justify-content-end">
            <input class="btn text-white" style="background-color: #579789;" type="submit" value="Make changes">
          </div>
        </div>
      </div>
  </div>
</form>

</body>
</html>