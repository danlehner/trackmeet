<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', { title: 'Genre Page'}) %>
<body>

  <%- include('../../partials/nav') %>

  
  <h1><%= genre.name %></h1>
  <h3>Artists</h3>
  <% genre.artists.forEach(artist => { %>
    <a href="/profile/artists/<%= artist._id %>">
      <img src="<%= artist.artistPicture %>" alt="<%= artist.name %>" width="50">
      <p><%= artist.name %></p>
    </a>
  <% }) %>
  <h3>Songs</h3>
  <% genre.songs.forEach(song => { %>
    <a href="/profile/songs/<%= song._id %>">
      <p><%= song.title %></p>
    </a>
  <% }) %>
</body>
</html>