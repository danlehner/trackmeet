<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', { title: 'Track Meet'}) %>
<body> 

 <% if (user) { %>

  <div class="container mt-5">
    <div class="row border border-dark" style="background-color: red;">
      <h1 class="text-white p-3">Welcome back, <%= user.username %>!</h1>
    </div>
  </div>
  <div class="container mb-5" style="height: 300px;">
    <div class="row h-100">
      <div class="col" style="background-image: url('../assets/record-collection.jpeg'); background-size: cover;">
        <h2 class="mt-3 text-white text-center">View Your Collection</h3>
          <div class="d-flex justify-content-center">
            <a href="/profile">
              <button class="btn btn-primary mt-3">GO</button>
            </a>
          </div>
     </div>
     <div class="col" style="background-image: url('../assets/new-record.jpeg'); background-size: cover;">
      <h2 class="mt-3 text-white text-center">Search New Music</h3>
        <div class="d-flex justify-content-center">
          <a href="/search">
            <button class="btn btn-primary mt-3">GO</button>
          </a>
        </div>
   </div>
      <div class="col" style="background-image: url('../assets/open-door.jpeg'); background-size: cover;">
        <h2 class="mt-3 text-center text-white">Logout</h2>
         <div class="d-flex justify-content-center">
           <form action="/auth/logout?_method=DELETE" method="POST">
            <input class="btn btn-secondary mt-3" type="submit" value="BYE">
          </form>
         </div>
      </div>
    </div> 
  </div>

 <% } else { %>

  <div class="container mt-5">
    <div class="row border border-dark" style="background-color: red;">
      <h1 class="text-white p-3">Welcome to Track Meet!</h1>
    </div>
  </div>
  <div class="container mb-5" style="height: 300px;">
    <div class="row h-100">
      <div class="col" style="background-image: url('../assets/open-door.jpeg'); background-size: cover;">
        <h2 class="mt-5 text-white text-center">Returning user?</h2>
          <div class="d-flex justify-content-center">
            <a href="/auth/login">
              <button class="btn btn-primary mt-3">LOGIN HERE</button>
            </a>
          </div>
       </div>
     <div class="col" style="background-image: url('../assets/register.jpeg'); background-size: cover;">
      <h2 class="mt-5 text-white text-center">Brand New to Track Meet?</h3>
        <div class="d-flex justify-content-center">
          <a href="/auth/register">
            <button class="btn btn-primary mt-3">REGISTER FOR AN ACCOUNT</button>
          </a>
        </div>
   </div>
    </div> 
  </div>

 <% } %>


</body>
</html>